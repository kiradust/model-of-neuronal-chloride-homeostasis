issn = {03636143},
journal = {American Journal of Physiology - Cell Physiology},
number = {3},
pages = {C196--C206},
pmid = {7377338},
title = {{Interactions of cell volume, membrane potential, and membrane transport parameters}},
volume = {7},
year = {1980}
}
@article{Fallis2013,
